<div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-2">
        {{ config.label }}
    </label>

    {% set fallback = config.fallback ?? {} %}

    <div class="space-y-2">

        <div>
            <label class="block text-xs text-gray-500 mb-1">Condition (Twig expression)</label>
            <input
                    type="text"
                    name="{{ key }}[test]"
                    value="{{ value.value.test|default(fallback.test|default('')) }}"
                    class="form-input block w-full"
                    data-action="change->admin--page-builder-preview#updateOverride"
                    data-type="{{ config.type }}"
                    data-instance-id="{{ instanceId }}"
                    data-key="{{ key }}[test]"
            />
        </div>

        <div>
            <label class="block text-xs text-gray-500 mb-1">Value if true</label>
            <input
                    type="text"
                    name="{{ key }}[true]"
                    value="{{ value.value.true|default(fallback.true|default('')) }}"
                    class="form-input block w-full"
                    data-action="change->admin--page-builder-preview#updateOverride"
                    data-type="{{ config.type }}"
                    data-instance-id="{{ instanceId }}"
                    data-key="{{ key }}[true]"
            />
        </div>

        <div>
            <label class="block text-xs text-gray-500 mb-1">Value if false</label>
            <input
                    type="text"
                    name="{{ key }}[false]"
                    value="{{ value.value.false|default(fallback.false|default('')) }}"
                    class="form-input block w-full"
                    data-action="change->admin--page-builder-preview#updateOverride"
                    data-type="{{ config.type }}"
                    data-instance-id="{{ instanceId }}"
                    data-key="{{ key }}[false]"
            />
        </div>

    </div>
</div>
