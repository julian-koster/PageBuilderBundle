<div class="mb-4">
    <label class="block text-sm font-medium text-gray-300 mb-2">
        {{ config.label }}
    </label>

    {% if config.type == 'image' %}
        <div><p class="font-semibold text-gray-400 mb-3 text-sm">Upload a file or enter a URL.</p></div>

        <label class="block text-xs text-gray-400 mb-1">
            Upload an image
        </label>
        <input
                type="file"
                name="fileValue"
                class="block w-full text-sm text-gray-300 file:mr-4 file:py-2 file:px-4
                   file:rounded-lg file:border-0
                   file:text-sm file:font-semibold
                   file:bg-gray-600 file:text-white
                   hover:file:bg-gray-500
                   dark:file:bg-gray-600 dark:file:text-white dark:hover:file:bg-gray-500
                   bg-gray-800 border border-gray-700 rounded-lg"
                data-action="change->juliankoster--pagebuilderbundle--page-builder#uploadFile"
                data-url="{{ absolute_url(path('juliankoster_pagebuilder_mainbuilder_image_upload')) }}"
                data-type="imgSrc"
                data-instance-id="{{ instanceId }}"
                data-key="{{ config.label }}"
                data-max-files="1"
                accept="image/*"
                data-juliankoster--pagebuilderbundle--page-builder-target="uploadField"
        />
    {% endif %}
</div>
